<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Book4Book_MobileApp.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Title:" FontSize="Medium" />
        <Label Text="{Binding Text}" FontSize="Small"/>
        <Label Text="Author:" FontSize="Medium" />
        <Label Text="{Binding Author}" FontSize="Small"/>
        <Label Text="Category:" FontSize="Medium" />
        <Label Text="{Binding Category}" FontSize="Small"/>
        <Label Text="City:" FontSize="Medium" />
        <Label Text="{Binding City}" FontSize="Small"/>
        <Label Text="Description:" FontSize="Medium" />
        <Label Text="{Binding Description}" FontSize="Small"/>
    </StackLayout>
    
</ContentPage>